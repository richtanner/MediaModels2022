<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_tremors"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_tremors_round"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/ncm_Theme"
        tools:targetApi="31" >
        <activity
            android:name=".WebPage"
            android:exported="false">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ItemDetailHostActivity" />
        </activity>
        <activity
            android:name=".ItemDetailHostActivity"
            android:exported="true"
            android:label="@string/title_bar"
            android:resizeableActivity="true"
            android:screenOrientation="portrait"
            tools:targetApi="24" >
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".Splash"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/ncm_splashTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
    </application>

</manifest>